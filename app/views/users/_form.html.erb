<%= form_for @user do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
    <%= f.label :phone %>
	<%= f.text_field :phone %>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>
	<%= f.submit %>
<% end %>
<%= link_to '[Back to Users]', users_path %>
