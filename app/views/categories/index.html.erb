<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Post</td>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
        <tr>
          <td><%= link_to category.name, category_path(category) %></td>
          <td>
            <%= link_to 'Edit', edit_category_path(category) %>
              <%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: 'Are you sure to delete this category?'} %>
          </td>
        </tr>
      <% end %> 
  </tbody>
</table>

<%= link_to 'New Category', new_category_path %>