<h1>Present Post</h1>
  <p><%= @post.user.name %></p>
  <p><%= @post.title %></p>
  <p><%= @post.body %></p>
<h2>Present Comments</h2>
<% @post.comments.each do |comment| %>
    <% next unless comment.persisted? %>
    <p>
      <strong>User:</strong>
      <%= comment.user.name %>
    </p>
    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
<% end %>

<h2>Add a comment:</h2>
<%= flash[:error]%>
<%= form_for([@post, @comment]) do |f| %>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body,:rows => 20, :cols => 40 %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', posts_path %>
