<%= form_for(@post) do |f| %>
  <div>
    <%= current_user.name %>
  </div>

  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>

  <div class="area">
    <%= f.label :body %><br/>
    <%= f.text_area :body, :rows => 20, :cols => 40 %> 
  </div>
  
  <div>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => 'Select one!') %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
